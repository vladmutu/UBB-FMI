<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" focusTraversable="false" spacing="10" style="-fx-background-color: black; -fx-padding: 20;" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.labjavafx.Controllers.StartWindow">
    <StackPane>
            <ImageView fitHeight="600" fitWidth="800" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../Imgs/logo.png" />
                </image>
            </ImageView>
    </StackPane>
    <StackPane>
        <TextField fx:id="emailField" focusTraversable="false" maxWidth="150.0" prefHeight="25.0" prefWidth="100.0" promptText="Enter your email" style="-fx-background-radius: 8; -fx-border-radius: 8" />
    </StackPane>


    <HBox>
        <StackPane>
            <TextField fx:id="passwordFieldVisible" focusTraversable="false" maxWidth="150.0" prefHeight="25.0" prefWidth="150.0" promptText="Enter your password" style="-fx-background-radius: 8; -fx-border-radius: 8" />
            <PasswordField fx:id="passwordField" focusTraversable="false" maxWidth="150.0" prefHeight="25.0" prefWidth="150.0" promptText="Enter your password" style="-fx-background-radius: 8; -fx-border-radius: 8" />
        </StackPane>
        <CheckBox fx:id="showPassword" onAction="#showHidePassword" style="-fx-text-fill: white; -fx-font-size: 12;" text="Show Password">
         <padding>
            <Insets left="50.0" />
         </padding></CheckBox>
      <padding>
         <Insets left="227.0" />
      </padding>
    </HBox>


    <Button maxWidth="100" onAction="#SignIn" text="Sign In">
      <font>
         <Font name="Verdana" size="12.0" />
      </font></Button>
    <Button maxWidth="100" onAction="#goToSignUp" text="Sign Up">
      <font>
         <Font name="Verdana" size="12.0" />
      </font></Button>
</VBox>
